<Window x:Class="InterfaceGrafica2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceGrafica2"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <TextBox Width="100"  Height="30" Name="MiCuadro" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ElementName=MiSlider, Path=Value, Mode=TwoWay}" />
        <Slider Width="350" Height="20" Minimum="0" Maximum="100" Name="MiSlider"  HorizontalAlignment="Center" Margin="0,300,0,0"/>
    </Grid>
</Window>
